generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String         @id @default(cuid())
  email           String         @unique
  emailVerified   DateTime?      @map("email_verified")
  password        String?
  name            String?
  image           String?
  defaultCurrency String         @default("TRY") @map("default_currency")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")

  subscriptions Subscription[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  icon      String?
  color     String?
  createdAt DateTime @default(now()) @map("created_at")

  subscriptions Subscription[]

  @@map("categories")
}

model Subscription {
  id               String    @id @default(cuid())
  userId           String    @map("user_id")
  categoryId       String?   @map("category_id")
  name             String
  description      String?
  logoUrl          String?   @map("logo_url")
  price            Decimal   @db.Decimal(10, 2)
  currency         String    @default("TRY")
  billingPeriod    String    @map("billing_period")
  startDate        DateTime  @map("start_date")
  nextBillingDate  DateTime  @map("next_billing_date")
  isFreeTrial      Boolean   @default(false) @map("is_free_trial")
  freeTrialEndDate DateTime? @map("free_trial_end_date")
  isActive         Boolean   @default(true) @map("is_active")
  notes            String?
  url              String?
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([userId, isActive])
  @@index([nextBillingDate])
  @@map("subscriptions")
}

model ExchangeRate {
  id             String   @id @default(cuid())
  baseCurrency   String   @map("base_currency")
  targetCurrency String   @map("target_currency")
  rate           Decimal  @db.Decimal(12, 6)
  fetchedAt      DateTime @map("fetched_at")
  source         String   @default("TCMB")

  @@unique([baseCurrency, targetCurrency, fetchedAt])
  @@index([baseCurrency, targetCurrency])
  @@map("exchange_rates")
}
